<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:vm="using:LiftMonitor.ViewModels"
             x:DataType="vm:MainWindowViewModel"
             x:CompileBindings="True"
             x:Class="LiftMonitor.Views.MainView">

  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="2*"/>
      <ColumnDefinition Width="1*"/>
    </Grid.ColumnDefinitions>

    <TextBox Grid.Column="0" Text="{Binding Information}" Margin="10"
            IsReadOnly="True" AcceptsReturn="True" TextWrapping="Wrap"/>

    <Grid Grid.Column="1">
      <Grid.RowDefinitions>
        <RowDefinition Height="1*"/>
        <RowDefinition Height="1*"/>
      </Grid.RowDefinitions>

      <Button Grid.Row="0" Content="Up" Padding="40"
              HorizontalAlignment="Center" VerticalAlignment="Center"
              HotKey="Up" Command="{Binding UpCommand}"/>

      <Button Grid.Row="1" Content="Down" Padding="40"
              HorizontalAlignment="Center" VerticalAlignment="Center"
              HotKey="Down" Command="{Binding DownCommand}"/>

    </Grid>

  </Grid>
</UserControl>
